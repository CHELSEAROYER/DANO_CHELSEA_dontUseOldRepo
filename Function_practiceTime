function calcArea(){ //code to be ran.
var width=20;
var height=30;
var area=width*height;
  console.log(area);
}
calcArea();   //this is the invocation.




//Arguments & Parameters-

funcName(argument1,argument2);
function funcName(parameter1, parameter2){
  //all the good stuff that the function runs.
}
//this is pretty abstract stuff.

//note:Arguements are the bits of information sent to the function.
calcArea(30,20);
function calcArea(w,h){   //w=30,h=20
var area=w*h;
  console.log(area);
}

//More Functions and Parameters,
function dogYears(age){   //the part in the parenthesis are the parameters.
var dogYears=age*7;
  console.log("Sparkey is "+dogYears+ " years old.")
}

dogYears(4);  //these are the arguements, the stuff within the parenthesis.
dogYears(5);


//RETURNING VALUES.

var total=calcArea(30,20);

function calcArea (w,h){
var area= w*h;
return area; //this is what makes the function spit data out.
}
  console.log(total);  //this will make 30*20 print out on the console.
  
//A FUNCTION VS A PROCEDURE.

//this is a function.
function calcAreaF(width, height){
var area=width*height;
return area; //has the return, so it's a "function".
}

//this is a procedure.
function calcAreaP(width,height){
var area=width*height;
  console.log(area); //does not have the return, so that makes this a prcedure. 
  
  





